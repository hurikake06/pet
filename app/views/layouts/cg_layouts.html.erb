<!DOCTYPE html>
<html>
  <head>
    <title>CuteGift</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if session[:user_mode] == 'HOST' %>
      <%= render "cg/layouts/host/header" %>
    <% else %>
      <%= render "cg/layouts/header" %>
    <% end %>
    <div id = "pageContent">
      <%= yield %>
    </div>
    <%= render "cg/layouts/footer"%>
  </body>
</html>
