<!DOCTYPE html>
<html>
  <head>
    <title>CuteGift</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class = "<%= user_mode_class %>" id="wrapper">
    <div id="sidebar-wrapper">
      <%= render "cg/layouts/sidemenu" %>
    </div>

    

    <div id="page-content-wrapper">
      <% if session[:user_mode] == 'HOST' %>
        <%= render "cg/layouts/host/header" %>
      <% else %>
        <%= render "cg/layouts/header" %>
      <% end %>
      <!-- <div class="col-sm-9"> -->
        <div id = "pageContent">
          <%= yield %>
        </div>
      <!-- </div> -->
      <%= render "cg/layouts/footer"%>
    </div>

  </body>
</html>
