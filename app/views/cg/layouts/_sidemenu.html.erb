<style media="screen">
  .sidebar-nav p{
    text-align: center;
    text-decoration: underline;
  }

  .sidebar-nav .sidebar-brand{
    text-align: center;
  }

  .sidebar-nav li{
    font-size: 2rem;
  }
</style>

<ul class="sidebar-nav">
  <li class="sidebar-brand">
      <%= image_tag('icon/logo/title_1.png', size: '100x100') %>
  </li>
  <% if login_flag %>
    <% user = session_user %>
    <%= link_to mypage_root_path do %>
      <li>
        <%= image_tag(user.icon, size: '40x40') %>
        <%= user.name %>さん
      </li>
      <% if user_mode_class == 'USER' %>
        <li><%= link_to 'ホストモードになる', change_user_mode_path(user_mode: 'HOST') %></li>
      <% elsif user_mode_class == 'HOST' %>
        <li><%= link_to 'ユーザモードになる', change_user_mode_path(user_mode: 'USER') %></li>
      <% end %>
    <% end %>
    <hr>
    <p>ペットリスト</p>
    <% unless user.pets.empty? %>
      <% user.pets.each do |pet| %>
        <li>
          <%= link_to setting_pet_path petname: pet.petname do %>
            <%= image_tag(pet.icon, size: '40x40') %>
            <%= pet.name %>
          <% end %>
        </li>
      <% end %>
    <% end %>
    <hr>
    <li>
        <%= link_to 'logout', logout_path %>
    </li>
    <hr>
    <li>
      <a href="#">お知らせ</a>
    </li>
    <li>
      <a href="<%= setting_root_path %>">設定</a>
    </li>
    <li>
      <a href="#">CuteGiftについて</a>
    </li>
    <li>
      <a href="#">ヘルプ</a>
    </li>
    <hr>
    <li>
      <a href="#">利用規約</a>
    </li>
    <li>
      <a href="#">サポート</a>
    </li>
    <li>
      <a href="#">プライバシーポリシー</a>
    </li>
    <li>
      <a href="#">ご意見・ご要望</a>
    </li>
  <% else %>
    <li>
      <%= image_tag("icon/person/b_12.png",:size => "40x40")%>
      ゲスト
    </li>
    <hr>
    <li>
        <%= link_to 'login', login_path %>
    </li>
    <hr>
    <li>
      <a href="#">CuteGiftについて</a>
    </li>
    <li>
      <a href="#">ヘルプ</a>
    </li>
    <hr>
    <li>
      <a href="#">利用規約</a>
    </li>
    <li>
      <a href="#">サポート</a>
    </li>
    <li>
      <a href="#">プライバシーポリシー</a>
    </li>
    <li>
      <a href="#">ご意見・ご要望</a>
    </li>
  <% end %>
</ul>

<script>
$(function(){
  $("#menu-toggle").click(function(e) {
    e.preventDefault();
    $("#wrapper").toggleClass("toggled");
  });
});
</script>
