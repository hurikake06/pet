<% if error_code.present? %>
  <p class='error-message container'><%= error_code %></p>
<% end %>
<%= form_for Cg::User.new, url: { action: 'pass_check' } do |f| %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class:'form-control', value:user&.username %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class:'form-control', value:user&.password %>
  </div>
  <%= f.button type:'submit', class: 'btn btn-primary' do %>
    ログイン
  <% end %>
<% end %>
