<% user ||= Cg::User.new %>
<%= form_for user, url: { action: 'new' } do |f| %>
  <div class = "form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= print_form_error user.errors, :name %>
  </div>
  <div class = "form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: 'form-control' %>
    <%= print_form_error user.errors, :username %>
  </div>
  <div class = "form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>
    <%= print_form_error user.errors, :email %>
  </div>
  <div class = "form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
    <%= print_form_error user.errors, :password %>
  </div>
  <div class = "form-group">
    <%= f.label :about %>
    <%= f.text_area :about, class: 'form-control' %>
    <%= print_form_error user.errors, :about %>
  </div>
  <%= f.button type:'submit', class: 'btn btn-primary' %>
<% end %>
