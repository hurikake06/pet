<style media="screen">
  .box_wrapper{
    width: 85%;
    background: #f4f4f4;
    border-left: solid 6px #5bb7ae;
    box-shadow: 0px 2px 3px rgba(0, 0, 0, 0.33);
    margin-left: auto;
    margin-right: auto;
    padding : 20px ;
  }

  .box_wrapper .profile_icon{
    text-align:center;
    padding : 20px ;
  }

  .box_wrapper img{
    width:100px;
    height:100px;

  }

  .box_wrapper h1 {
      margin: 0;
      padding: 0;
      text-align: center;
  }

  .box_wrapper h3 {
      margin: 0;
      padding: 0;
      text-align: center;
  }

  .box_wrapper p {
      text-align: center;
  }

  .flex{
    padding: 2.5% 0;
    flex-direction: row;
    flex-wrap: wrap;
    text-align:center;
  }

  .flex a{
    font-size: 20px;
    text-align: center;
  }
</style>

<% if @user.present? %>
  <div class="box_wrapper">
    <h1><%= @user.name %></h1>
    <div class="profile_icon">
      <%=image_tag(@user.icon,class:'icon')%>
    </div>
    <p><%= @user.username %></p>
    <p>E-mail : <%= @user.email %></p>
    <p>About   : <%= @user.about %></p>
    <br>
    <h3>ペットリスト</h3>
    <% if @user.pets.present? %>
        <div class="flex">
        <% @user.pets.each do |pet| %>
          <a href="<%= show_pet_path petname: pet.petname %>">
            <%= pet.name %>:<%= pet.type.name %>
            <%=image_tag(pet.icon,class:'icon')%>
          </a>
        <% end %>
      </div>
    <% else %>
      <p>ペットが登録されていません</p>
    <% end %>
  <% else %>
    <p>urlが間違っています</p>
  <% end %>
</div>
