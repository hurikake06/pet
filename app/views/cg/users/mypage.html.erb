<h1>~mypage~</h1>
<h2><% @user.name %></h2>
<Hr>
<h1><%= @user.name %></h1>
<h2><%= @user.id %></h2>
<p><%= @user.username %></p>
<ul>
    <li>E-mail : <%= @user.email %></li>
    <li>About   : <%= @user.about %></li>
</ul>
<h3>pet_list</h3>
<% if @user.pets.present? %>
  <ul>
    <% @user.pets.each do |pet| %>
      <a href="/CuteGift/mypage/pet/<%= pet.petname %>">
        <li><%= pet.name %>:<%= pet.type.name %></li>
      </a>
    <% end %>
  </ul>
<% else %>
  <p>ペットが登録されていません</p>
<% end %>
<h3><a href='/CuteGift/mypage/pet/new'>新規ペット追加</a></h3>
