<% if share.present? %>
  <%= form_for share, url: { action: 'new'} do |f| %>
    <%= f.fields_for share.cg_share_detail do |ff| %>
      <div class = "form-group">
        <%= ff.label :facilities_id %>
        <% facilities = Cg::Facility.where(id: Cg::PetsFacility.select(:facilities_id).where(pets_id: pet&.id)) %>
        <% facilities.each do |facility| %>
          <label><%= ff.radio_button :facilities_id, facility.id %><%= facility.name %></label>
        <% end %>
      </div>
      <div class = "form-group">
        <%= ff.label :start %>
        <%= ff.datetime_select :start, {}, class: 'form-control' %>
      </div>
      <div class = "form-group">
        <%= ff.label :end %>
        <%= ff.datetime_select :end, {}, class: 'form-control' %>
      </div>
      <div class = "form-group">
        <%= ff.label :fixed_cost %>
        <%= ff.number_field :fixed_cost, class: 'form-control' %>
      </div>
      <div class = "form-group">
        <%= ff.label :variable_cost %>
        <%= ff.number_field :variable_cost, class: 'form-control' %>
      </div>
    <% end %>
    <%= f.button type:'submit', class: 'btn btn-primary' %>
  <% end %>
<% end %>
