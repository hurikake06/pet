<div class="pets-mypage">
  <div class="box-wrapper">
    <% if @pet.present? %>
      <% if @pet.share_flag %>
        <div class="share-info">
          <p>シェア可能</p>
        </div>
      <% else %>
        <div class="share-info share-info-false">
          <p>シェア不可</p>
        </div>
      <% end %>

      <h1><%= @pet.name %></h1>
      <div class="profile-icon">
        <%= image_tag(@pet.icon, class: 'icon') %>
      </div>
      <p><%= @pet.petname %></p>
      <p>sex : <%= @pet.sex.value %></p>
      <p>type   : <%= @pet.type.name %></p>
      <p>about   : <%= @pet.about %></p>

      <div class="pet-detail">
        <h2>詳細情報</h2>
        <% detail = @pet.detail %>
        <table class='table'>
          <tr <%= 'class = empty' unless detail.fixed_cost.present? %>>
            <th>シェアする際の頭金</th>
            <td><%= detail.fixed_cost.presence || '未登録' %></td>
          </tr>
          <tr <%= 'class = empty' unless detail.variable_cost.present? %>>
            <th>1時間あたりの料金</th>
            <td><%= detail.variable_cost.presence || '未登録' %></td>
          </tr>
          <tr <%= 'class = empty' if detail.medical_info == 100 %>>
            <th>1年以内の健康診断</th>
            <td><%= detail.medical.value %></td>
          </tr>
          <tr>
            <th>その他 注意事項</th>
            <td><%= detail.share_about.presence || '未登録' %></td>
          </tr>
        </table>
      </div>
      <div class="edit-prof">
        <br>
        <%= link_to 'プロフィールを編集', cg_settings_pets_path(petname: @pet.petname) %>
      </div>
    <% else %>
      <p>Pet not found</p>
    <% end %>
  </div>
</div>
